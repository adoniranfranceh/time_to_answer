<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <h1>Sign up</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password,  placeholder:"Password", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation,  placeholder:"Password confirmation", class:"form-control" %>
          </div>
            <%= f.submit "Log in", class:"btn btn-default submit", style: 'float: none; margin: 0px; width: 70%;' %>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>

<%#= render "users/shared/links" %>
